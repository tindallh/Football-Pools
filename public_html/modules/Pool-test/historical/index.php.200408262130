function DisplayWeek($sweekID) {
	global $boxTitle, $boxContent, $user, $user_id, $uname, $cookie, $prefix, $dbi, $module_name, $db, $seasonover, $today_date;
	if ($seasonover == 1) {
		$boxContent .= "<h3>Sorry, the season is over.  Come back next fall for more fun...</h3>\n";
	} else {
		$boxTitle = "$uname's picks";
		$boxContent .= "<form action=\"modules.php?name=$module_name&amp;op=SavePicks\" method=\"post\">";
		$boxContent .= "<input type=\"hidden\" name=\"weekID\" value=\"".$sweekID."\">";
		$boxContent .= "<center><h3>Week $sweekID</h3></center><hr>\n";
		$boxContent .= "<table border=\"0\" cellpadding=\"2\" cellspacing=\"2\" width=\"100%\">";
		unset ($db_hi);
		$result_b = sql_query("SELECT game, pick FROM ".$prefix."_picks WHERE week='$sweekID' AND user_id = '$user_id' order by game", $dbi);
		while ($row = $db->sql_fetchrow($result_b)) {
			$db_game = $row['game'];
			$db_pick = $row['pick'];
			$db_hi[$db_game][$db_pick] = true;
		}
		$gamestopick=0;
		$gamesfrozen=0;
		$withoutspreads=0;
		$finishedgames=0;
		$result = sql_query("SELECT date, home, home_score, visitor, visitor_score, home_spread, game FROM ".$prefix."_games WHERE week='$sweekID' ORDER by date,game", $dbi);
		while ($row = $db->sql_fetchrow($result)) {
			$game = $row['game'];
			$date[$game] = $row['date'];
			$day = date("l", strtotime($date[$game]));
			$home = $row['home'];
			$visitor = $row['visitor'];
			$home_score = $row['home_score'];
			$visitor_score = $row['visitor_score'];
			$home_spread = $row['home_spread'];
			if (!(($home_score > 0) || ($visitor_score > 0))) {
				if ($date[$game] > $today_date) { 
					if ($home_spread > 0 || $home_spread < 0) {
						$gamestopick++ ;
						$boxContent .= "<tr><td>$date[$game]</td><td><input type=\"radio\" name=\"$game\" VALUE=\"visitor\"".($db_hi[$game]['visitor'] ? ' checked' : '')."></td><td><font class=\"content\">$visitor</font></td></tr>\n";
						$boxContent .= "<tr><td>$day</td><td><input type=\"radio\" name=\"$game\" VALUE=\"home\"".($db_hi[$game]['home'] ? ' checked' : '')."></td><td><font class=\"content\">at $home</font></td><td><font class=\"content\"><i>($home_spread)</i></font></td></tr>\n";
						$boxContent .= "<tr><td colspan=\"5\"><hr></td></tr>\n";
					} else {
					 	$withoutspreads++ ;
						$boxContent .= "<tr><td>$date[$game]</td><td></td><td><font class=\"content\">$visitor</font></td></tr>\n";
						$boxContent .= "<tr><td>$day</td><td></td><td><font class=\"content\">at $home</font></td><td></td></tr>\n";
						$boxContent .= "<tr><td colspan=\"5\"><hr></td></tr>\n";
					}
				} else {
					$gamesfrozen++ ;
					$boxContent .= "<tr><td>$date[$game]</td><td>".($db_hi[$game]['visitor'] ? '*' : '')."</td><td><font class=\"content\">$visitor</font></td></tr>\n";
					$boxContent .= "<tr><td>$day</td><td>".($db_hi[$game]['home'] ? '*' : '')."</td><td><font class=\"content\">at $home</font></td><td></td></tr>\n";
					$boxContent .= "<tr><td colspan=\"5\"><hr></td></tr>\n";
				}
			} else {
				$finishedgames++ ;
				$g_result = ($home_score - $visitor_score) - $home_spread;
				if ($g_result > 0) {
					$hbh="<b>";
					$heh="</b>";
					$vbh="";
					$veh="";
				} elseif ($g_result < 0) {
					$hbh="";
					$heh="";
					$vbh="<b>";
					$veh="</b>";
				}	else {
					$hbh="";
					$heh="";
					$vbh="";
					$veh="";
				}
				((($g_result > 0) && $db_hi[$game]['home']) ? $hbgs = ' bgcolor=lightgreen' : $hbgs = '') ;
				((($g_result < 0) && $db_hi[$game]['home']) ? $hbgs = ' bgcolor=red' : $hbgs = '') ;
				((($g_result < 0) && $db_hi[$game]['visitor']) ? $vbgs = ' bgcolor=lightgreen' : $vbgs = '') ;
				((($g_result > 0) && $db_hi[$game]['visitor']) ? $vbgs = ' bgcolor=red' : $hbgs = '') ;
				$boxContent .= "<tr><td>$date[$game]</td><td>".$vbh."<font class=\"content\">$visitor_score</font>".$veh."</td><td".$vbgs.">".$vbh."<font class=\"content\">$visitor</font>".$veh."</td></tr>\n";
				$boxContent .= "<tr><td>$day</td><td>".$hbh."<font class=\"content\">$home_score</font>".$heh."</td><td".$hbgs.">".$hbh."<font class=\"content\">at $home</font>".$heh."</td><td><font class=\"content\"><i>($home_spread)</i></font></td></tr>\n";
				$boxContent .= "<tr><td colspan=\"5\"><hr></td></tr>\n";
			}
		}
		$boxContent .= "</table><br><center>\n";
		if ($gamestopick > 0) {
			$boxContent .= "<input type=\"submit\" VALUE=\"Submit\">\n";
			$boxContent .= "</center></form><br>\n";
			$boxContent .= "If you change your mind, you can ";
			$boxContent .= "come back and change any of your picks up through the day before that particular game...<br>";
			$boxContent .= "Once you've saved a choice, it'll be filled in on the form when you bring it up.<br><br><br>\n";
		} else {
			$boxContent .= "</center></form><br>\n";
		}
		if ($finishedgames > 0) {
			$boxContent .= "<tr><td colspan=10><i>Winning teams against the spread are in </i><b>bold</b><i>, your picks are highlighted in yellow.</i></td></tr></table><br><br>\n";
		}
		if ($gamesfrozen == 1) {
			$boxContent .= "$gamesfrozen - One of your games is past the pick deadline, your pick is marked with an \"*\".<br><br>\n";
		} elseif ($gamesfrozen > 1) {
			$boxContent .= "Some of your games is past the pick deadline, your pick is marked with an \"*\".<br><br>\n";
		}
		if ($withoutspreads > 0) {
			$boxContent .= "As soon as the Spreads are posted, You'll have the chance to pick your team.<br><br>\n";
		}
	}
}
